# Gateway Authentication
# API key required for all /v1/* endpoints
# Generate a secure random string (e.g., openssl rand -hex 32)
GATEWAY_API_KEY=your-secure-api-key-here

# RunPod Configuration
# Your RunPod platform API key (from https://runpod.io/console/user/settings)
RUNPOD_API_KEY=your-runpod-api-key

# RunPod endpoint ID for document classification
# Found in RunPod console after creating the serverless endpoint
RUNPOD_CLASSIFY_ENDPOINT=abc123xyz

# RunPod endpoint ID for document extraction
# Found in RunPod console after creating the serverless endpoint
RUNPOD_EXTRACT_ENDPOINT=def456uvw

# Request timeout in seconds (optional, default: 120)
# Increase for large documents or slow cold starts
RUNPOD_TIMEOUT=120

# Maximum retry attempts for failed requests (optional, default: 3)
RUNPOD_MAX_RETRIES=3

# Rate Limiting Configuration (optional)
# Maximum requests per time window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# Logging level: DEBUG, INFO, WARNING, ERROR (optional, default: INFO)
LOG_LEVEL=INFO
